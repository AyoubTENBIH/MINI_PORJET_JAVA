<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controllers.PackManagementController"
      spacing="15" styleClass="page-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Title -->
    <Label text="Gestion des Packs/Abonnements" styleClass="page-title-large"/>
    
    <!-- Top Bar: Search and Actions -->
    <HBox fx:id="topBar" spacing="10">
        <TextField fx:id="searchField" promptText="Rechercher un pack..." 
                   prefWidth="400"/>
        <Button fx:id="addButton" text="+ Nouveau Pack" styleClass="btn-success"/>
        <Button fx:id="editButton" text="Modifier" styleClass="btn-primary"/>
        <Button fx:id="deleteButton" text="Supprimer" styleClass="btn-danger"/>
    </HBox>
    
    <!-- Packs Table -->
    <TableView fx:id="packsTable" prefHeight="500" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nomColumn" text="Nom" prefWidth="200"/>
            <TableColumn fx:id="prixColumn" text="Prix (DH)" prefWidth="120"/>
            <TableColumn fx:id="activitesColumn" text="Activités" prefWidth="300"/>
            <TableColumn fx:id="dureeColumn" text="Durée" prefWidth="100"/>
            <TableColumn fx:id="actifColumn" text="Actif" prefWidth="80"/>
        </columns>
    </TableView>
</VBox>


