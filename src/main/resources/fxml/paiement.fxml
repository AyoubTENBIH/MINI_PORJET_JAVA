<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controllers.PaiementManagementController"
      spacing="15" styleClass="page-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Title -->
    <Label text="Gestion des Paiements &amp; Cotisations" 
           styleClass="page-title-large"/>
    
    <!-- Statistics KPI Box -->
    <HBox fx:id="statsBox" spacing="15"/>
    
    <!-- Navigation Buttons -->
    <HBox fx:id="navigationContainer" spacing="12" alignment="CENTER_LEFT">
        <padding>
            <Insets top="8" bottom="8" left="0" right="0"/>
        </padding>
        <children>
            <Button fx:id="navListeRouge" text="ðŸ”´ Liste Rouge" 
                   prefWidth="250" prefHeight="48"
                   styleClass="nav-button"/>
            <Button fx:id="navTousPaiements" text="ðŸ’³ Tous les Paiements" 
                   prefWidth="250" prefHeight="48"
                   styleClass="nav-button"/>
            <Button fx:id="navNouveauPaiement" text="âž• Nouveau Paiement" 
                   prefWidth="250" prefHeight="48"
                   styleClass="nav-button"/>
        </children>
    </HBox>
    
    <!-- Content Container -->
    <VBox fx:id="contentContainer" spacing="15" VBox.vgrow="ALWAYS" style="-fx-background-color: #0d0f1a;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <!-- Liste Rouge Content -->
        <VBox fx:id="redListContainer" spacing="15" VBox.vgrow="ALWAYS" visible="true" managed="true">
            <children>
                <Label text="AdhÃ©rents avec abonnement expirÃ© ou impayÃ©" 
                       style="-fx-text-fill: #EF4444; -fx-font-size: 18px; -fx-font-weight: 700;"/>
                <HBox spacing="10">
                    <Button fx:id="payerButton" text="Enregistrer Paiement" 
                           styleClass="btn-success"/>
                    <Button fx:id="refreshRedListButton" text="Actualiser" 
                           styleClass="btn-secondary"/>
                </HBox>
                <TableView fx:id="redListTable" prefHeight="600" minHeight="400" maxHeight="800" 
                          prefWidth="1200" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
        
        <!-- Tous les Paiements Content -->
        <VBox fx:id="paymentsContainer" spacing="15" VBox.vgrow="ALWAYS" visible="false" managed="false">
            <children>
                <HBox spacing="10">
                    <TextField fx:id="searchPaymentsField" promptText="Rechercher..." 
                              prefWidth="300"/>
                    <Button fx:id="refreshPaymentsButton" text="Actualiser" 
                           styleClass="btn-secondary"/>
                </HBox>
                <TableView fx:id="paiementsTable" prefHeight="600" minHeight="400" maxHeight="800" 
                          prefWidth="1200" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
        
        <!-- Nouveau Paiement Content -->
        <VBox fx:id="newPaymentContainer" spacing="20" alignment="CENTER" 
              visible="false" managed="false">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            <children>
                <Label text="Enregistrer un nouveau paiement" 
                       style="-fx-text-fill: #E6EAF0; -fx-font-size: 18px; -fx-font-weight: 700;"/>
                <Button fx:id="newPaymentButton" text="Nouveau Paiement" 
                       styleClass="btn-success-large"/>
            </children>
        </VBox>
    </VBox>
</VBox>


