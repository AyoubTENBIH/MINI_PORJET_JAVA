<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controllers.PaiementManagementController"
      spacing="15" styleClass="page-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Title -->
    <Label text="Gestion des Paiements &amp; Cotisations" 
           styleClass="page-title-large"/>
    
    <!-- Top Bar: Search and Actions -->
    <HBox fx:id="topBar" spacing="10">
        <TextField fx:id="searchPaymentsField" promptText="Rechercher par adhÃ©rent, montant..." 
                   prefWidth="400"/>
        <Button fx:id="addPaymentButton" text="+ Nouveau Paiement" styleClass="btn-success"/>
    </HBox>
    
    <!-- Payments Table -->
    <TableView fx:id="paiementsTable" prefHeight="500" VBox.vgrow="ALWAYS">
        <!-- Columns will be created programmatically in controller -->
    </TableView>
</VBox>


